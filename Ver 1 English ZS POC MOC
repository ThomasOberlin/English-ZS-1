    <script>
        // Tab switching functionality
        function showTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => content.classList.remove('active'));
            
            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.nav-tab');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected tab content
            document.getElementById(tabName).classList.add('active');
            
            // Add active class to clicked tab
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
        }

        // Chef selection functionality
        function selectChef(chefName) {
            const chefCards = document.querySelectorAll('.chef-card');
            chefCards.forEach(card => card.classList.remove('active'));
            
            event.target.closest('.chef-card').classList.add('active');
            
            // In a real app, this would load different recipes based on chef
            console.log(`Selected chef: ${chefName}`);
        }

        // Recipe generation functionality
        function generateRecipe(ingredient) {
            alert(`Generating Chef Lidy recipe for ${ingredient}... \n\nThis would create a new recipe targeting customers who previously bought ${ingredient} and haven't returned recently!`);
        }

        // Recipe details functionality
        function showRecipeDetails(recipeId) {
            alert(`Opening full recipe details for ${recipeId}...\n\nThis would show:\n- Complete ingredient list\n- Step-by-step instructions\n- Nutritional information\n- Customer targeting info`);
        }

        // WhatsApp functionality
        function sendWhatsApp(alertId) {
            const messages = {
                'maria-wagyu': 'Oi Maria! 👋 Chegou aquele wagyu especial que você adora. Separei um para você - perfeito para o fim de semana! 🥩 Quer que eu guarde?',
                'carlos-return': 'E aí Carlos! 😊 Faz tempo que não te vejo... Chegou chorizo espanhol novinho, perfeito para seus churrascos! Quando pode passar?',
                'roberto-salmon': 'Oi Roberto! 🐟 Salmão do Atlântico fresquinho chegou hoje. Te guardei o melhor pedaço! Interessado?',
                'fernanda-recipe': 'Fernanda! 👨‍🍳 Chef Lidy criou uma receita incrível com camarão. Quer que eu separe os ingredientes? Te mando a receita!'
            };
            
            const message = messages[alertId] || 'Mensagem personalizada do gerente';
            
            alert(`📱 WhatsApp Message Preview:\n\n"${message}"\n\n✅ This would be sent directly through the manager's WhatsApp Business account, maintaining the personal touch while leveraging AI insights!`);
        }

        // Simulate real-time updates
        function updateMetrics() {
            // This would normally fetch real data from the API
            console.log('Updating real-time metrics...');
        }

        // Update metrics every 30 seconds in a real application
        setInterval(updateMetrics, 30000);

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Zona Sul AI Food Waste Reduction Platform initialized');
            updateMetrics();
        });
    </script>
